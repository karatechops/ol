{
    parser: "babel-eslint",
	  env: {
	    es6: true,
	    browser: true,
	    node: true,
	    mocha: true
	  },
	  parserOptions: {
	    ecmaVersion: 6,
	    sourceType: "module",
	    ecmaFeatures: {
	      jsx: true,
	      experimentalObjectRestSpread: true
	    }
	  },
	  plugins: [
	    "react",
	    "import"
	  ],
    extends: ["airbnb", "plugin:react/recommended"],
    rules: {
    	comma-dangle : [2, "always-multiline"],
    	semi: [2, "never"],
    	import/no-unresolved: [0],
    	global-require: [0],
    	no-unreachable: [0]
    }
}